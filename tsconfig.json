    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "contracts",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "contracts/**/*.ts"
  ]
}